<li id="comment-<%= comment._id%>">
    <p>
        <% if (locals.user && (locals.user.id == comment.user.id || locals.user.id == i.user.id) ) {%>
            <small>
                <a class="delete-comment-button" href="/comment/destroy/<%= comment._id %>">X</a>
            </small>
        <% } %>
        <%= comment.content %>
        <small>
            <%= comment.user.name %>
        </small>
        <!-- display the likes of this comments, if the user is logged in, then show the link to toggle likes, else just show them -->
        <small>
            <% if(locals.user){ %>
                <a class="toggle-like-button" data-likes="<%= comment.likes.length %>" href="/likes/toggleLike/?id=<%= comment._id %>&type=Comment">
                    <%= comment.likes.length %> Likes
                </a>
            <% }else{ %>
                <%= comment.likes.length %> Likes
            <% } %>
        </small>
    </p>
</li>