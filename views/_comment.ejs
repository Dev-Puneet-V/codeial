<li id="comment-<%= comment._id%>">
    <p>
        <% if (locals.user && (locals.user.id == comment.user.id || locals.user.id == i.user.id) ) {%>
            <small>
                <a class="delete-comment-button" href="/comment/destroy/<%= comment._id %>">X</a>
            </small>
        <% } %>
        <%= comment.content %>
        <br>
        <small>
            <%= comment.user.name %>
        </small>
    </p>
</li>